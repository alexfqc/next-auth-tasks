{
  "name": "nextjs-auth-tasks",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test:reset": "dotenv -e .env.test -- tsx scripts/reset-test-db.ts",
    "test:e2e:reset": "dotenv -e .env.playwright -- tsx scripts/reset-test-db.ts",
    "test:server": "npm run test:reset && dotenv -e .env.test -- vitest run --config vitest.config.server.ts",
    "test:ui": "dotenv -e .env.test -- vitest run --config vitest.config.ui.ts",
    "test:e2e": "npm run test:e2e:reset && npx playwright test",
    "dev:e2e": "dotenv -e .env.playwright -- next dev",
    "test": "npm run test:server && npm run test:ui"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^6.9.0",
    "bcrypt": "^6.0.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.519.0",
    "next": "15.3.3",
    "next-auth": "^4.24.11",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.58.1",
    "zod": "^3.25.56"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.53.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv": "^16.5.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "eslint-plugin-testing-library": "^7.5.3",
    "jsdom": "^26.1.0",
    "playwright": "^1.53.1",
    "prisma": "^6.9.0",
    "tailwindcss": "^4",
    "tsx": "^4.19.4",
    "typescript": "^5",
    "vite": "^6.3.5",
    "vitest": "^3.2.3"
  }
}
